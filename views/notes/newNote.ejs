<form method="POST" action="<% if (update) { %>
    /note/<%= noteToUpdate._id %>/edit
    <% } else { %>
        /note/create
 <% } %>">
 <div class="newnoteContainer">
    <label class="titleContainer">
        Title:
        <input class="container" type="text" name="title" value="<% if (update) { %><%=noteToUpdate.title %><% } %>"/>
    </label>
    <label class="contentContainer">
        Content:
        <input class="container" type="text" name="content" value="<% if (update) { %><%=noteToUpdate.content %><% } %>"/>
    </label>
    <button class="loginButton" type="submit" > 
        <% if (update) { %>
        Update
      <% } else { %>
        Save Note
      <% } %>
    </button>
  </div>
</form>